{
  "files.exclude": {
    "build": true,
    "/*.css": {
      "when": "$(basename).scss"
    },
    "/.js": {
      "when": "$(basename).ts"
    },
    "**/?.js": {
      "when": "$(basename).tsx"
    },
    "/*.lock.json": true,
    "/*.map": {
      "when": "$(basename)"
    },
    "/.DS_Store": true,
    "/.git": true,
    "/.svn": true,
    "/.tmp": true,
    "/bin/": true,
    "/obj/": true,
    "node_modules": true
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
